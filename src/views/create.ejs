<!doctype html>
<html lang="en">
<%- include("./layouts/head.ejs") -%>
<body>
<div class="container">
    <h2>Stacked form create student </h2>
    <form style="width: 60%" enctype="multipart/form-data" method="post" action="/create">
        <div class="form-group">
            <label for="email">Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
        </div>
        <div class="form-group">
            <label for="pwd">Code:</label>
            <input type="text" class="form-control" id="pwd" placeholder="Enter code" name="code">
        </div>
        <div class="form-group">
            <label for="pwd">PointLT:</label>
            <input type="number" class="form-control" id="pwd" placeholder="Enter point LT" name="pointLT">
        </div>
        <div class="form-group">
            <label for="pwd">PointTH:</label>
            <input type="number" class="form-control" id="pwd" placeholder="Enter point TH" name="pointTH">
        </div>
        <div class="form-group">
            <label for="pwd">Description:</label>
            <input type="text" class="form-control" id="pwd" placeholder="Enter description" name="description">
        </div>
        <div class="form-group">
            <label for="pwd">Evaluate:</label>
            <input type="text" class="form-control" id="pwd" placeholder="Enter evaluate" name="evaluates">
        </div>
        <div class="form-group">
            <label for="sel1">Class:</label>
                <select class="form-control" id="sel1" name="class">
                    <option value="C0922G1">C0922G1</option>
                    <option value="C1022I1">C1022I1</option>
                </select>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember"> Remember me
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/list">
            <button type="submit" class="btn btn-success"> Exit</button>
        </a>
    </form>
</div>

<%- include("./layouts/script.ejs") -%>
</body>
</html>